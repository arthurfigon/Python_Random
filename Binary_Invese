variable = int(input("Gimme a number:")) #10
value = variable
binary = ""
if value == 0:
    binary = "0"
if value == 1:
    binary = "1"
while value >= 2:
    binary += str(int(value % 2))
    if(value == 2):
        binary += str(int(value / 2))
    if(value == 3):
        binary += str(int(value / 2))
    value = int(value / 2)
print(binary)
